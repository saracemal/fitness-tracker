


<h1> Login </h1>
<h3> Welcome Back! </h3>


<div class="form-container">
  <%= form_for :session, url: login_path do |f| %>
    <div class="form-input">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>

    <div class="form-input">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit class: "form-btn" %>

    <br>
    <br>
    <%= link_to "New User? Sign Up! ðŸ–‹ ", new_user_path %>
    
  <% end %>

</div>
